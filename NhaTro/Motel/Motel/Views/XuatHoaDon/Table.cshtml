@{
    Layout = null;
}
@using Motel.ViewModels
@model QuanLyHoaDonViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, YourProjetcName

<div class="row">
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                    </th>
                    <th class="text-center">
                        <div class="md-checkbox-inline service-checkbox">
                            <div class="icheck-primary d-inline ml-2">
                                <input type="checkbox" value="" name="todo1" id="todoCheck1">
                                <label for="todoCheck1"></label>
                            </div>
                        </div>
                    </th>
                    <th class="text-center">
                    </th>
                    <th>Tháng/năm</th>
                    <th>Phòng</th>
                    <th>Người đại diện</th>
                    <th>Loại hóa đơn</th>
                    <th>Thành tiền</th>
                    <th>Thanh toán</th>
                    <th>Ngày tạo</th>
                    <th>Ngày thanh toán</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.listXuatHoaDon)
                {
                    @if (item.TonTai == true && item.TrangThai == false)
                    {
                        <tr class="item-1932 highlight">
                            <td class="text-center">
                                <a class="btn btn-circle btn-icon-only btn-default yellow-crusta tooltips"
                                   data-toggle="collapse" data-target=".item-expand-6444-1" data-placement="top" data-original-title="Mở/đóng.<br><b style='color: #26C281;'>Màu xanh</b>: là hóa đơn đã thanh toán"><i class="fa fa-angle-down"></i></a>
                            </td>
                            <td class="text-center">
                                <div class="md-checkbox-inline service-checkbox">
                                    <div class="icheck-primary d-inline ml-2">
                                        <input type="checkbox" value="" name="todo2" id="ck-1932">
                                        <label for="ck-1932">
                                            <span></span><span class="check"></span><span class="box"></span>
                                        </label>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <button class="btn btn-xs green dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                        Tác vụ
                                        <i class="fa fa-angle-down"></i>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        <li>
                                            <a data-remote="true" onclick="ShowPopupLarge('@Url.Action("AddOrEdit","XuatHoaDon",new { id = 0 }, Context.Request.Scheme)','Chỉnh sửa')"><i class="fas fa-edit"></i>Sửa hóa đơn</a>
                                        </li>
                                        <li>
                                            <a data-remote="true"><i class="fas fa-handshake-o" aria-hidden="true"></i>Xuất hóa đơn</a>
                                        </li>
                                        <li class="divider"></li>

                                    </ul>
                                </div>
                            </td>
                            <td>@item.ThangNam</td>
                            <td>@item.TenPhong</td>
                            <td>@item.TenPhong</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>

                        </tr>
                    }
                    else if (item.TonTai == true && item.TrangThai == true)
                    {
                        <tr class="item-1932 highlight">
                            <td class="text-center">
                                <a class="btn btn-circle btn-icon-only btn-default green-jungle tooltips"
                                   data-toggle="collapse" data-target=".item-expand-6444-1" data-placement="top" data-original-title="Mở/đóng.<br><b style='color: #26C281;'>Màu xanh</b>: là hóa đơn đã thanh toán"><i class="fa fa-angle-down"></i></a>
                            </td>
                            <td class="text-center">
                                <div class="md-checkbox-inline service-checkbox">
                                    <div class="icheck-primary d-inline ml-2">
                                        <input type="checkbox" value="" name="todo2" id="ck-1932">
                                        <label for="ck-1932">
                                            <span></span><span class="check"></span><span class="box"></span>
                                        </label>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <button class="btn btn-xs green dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                        Tác vụ
                                        <i class="fa fa-angle-down"></i>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        <li>
                                            <a data-remote="true" onclick="ShowPopupLarge('@Url.Action("AddOrEdit","XuatHoaDon",new { id = 0 }, Context.Request.Scheme)','Chỉnh sửa')"><i class="fas fa-edit"></i> Xem lại hóa đơn</a>
                                        </li>
                                        <li>
                                            <a data-remote="true"><i class="fas fa-handshake-o" aria-hidden="true"></i>Xuất hóa đơn</a>
                                        </li>
                                        <li class="divider"></li>
                                        <li>
                                            <a>
                                                <i class="fas fa-file-word-o"></i> Giấy nhận cọc
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                            <td>@item.ThangNam</td>
                            <td>@item.TenPhong</td>
                            <td>@item.TenPhong</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>

                        </tr>
                    }
                    else
                    {
                        <tr class="item-1932 highlight">
                            <td class="text-center">
                                <a class="btn btn-circle btn-icon-only btn-default white-stripe tooltips"
                                   data-toggle="collapse" data-target=".item-expand-6444-1" data-placement="top"
                                   data-original-title="Mở/đóng.<br><b style='color: #26C281;'>Màu xanh</b>: là hóa đơn đã thanh toán"><i class="fa fa-angle-down"></i></a>
                            </td>
                            <td class="text-center">
                                <div class="md-checkbox-inline service-checkbox">
                                    <div class="icheck-primary d-inline ml-2">
                                        <input type="checkbox" value="" name="todo2" id="ck-1932">
                                        <label for="ck-1932">
                                            <span></span><span class="check"></span><span class="box"></span>
                                        </label>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <button class="btn btn-xs green dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                        Tác vụ
                                        <i class="fa fa-angle-down"></i>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        <li>
                                            <a data-remote="true" onclick="ShowPopupLarge('@Url.Action("AddOrEdit","XuatHoaDon",new { id = 0 }, Context.Request.Scheme)','Chỉnh sửa')"><i class="fas fa-edit"></i> Xuất hóa đơn</a>
                                        </li>

                                    </ul>
                                </div>
                            </td>
                            <td>@item.ThangNam</td>
                            <td>@item.TenPhong</td>
                            <td>@item.TenPhong</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>

                        </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</div>
