@{
    Layout = null;
}
@using Motel.ViewModels
@model CommonViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, YourProjetcName




<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <span class="caption-subject font-green sbold uppercase">Danh sách hóa đơn hàng tháng</span>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>

                    <div class="btn-group">
                        <button type="button" class="btn btn-tool dropdown-toggle" data-toggle="dropdown">
                            <i class="fas fa-wrench"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" role="menu">
                            <a href="#" class="dropdown-item">Action</a>
                            <a href="#" class="dropdown-item">Another action</a>
                            <a href="#" class="dropdown-item">Something else here</a>
                            <a class="dropdown-divider"></a>
                            <a href="#" class="dropdown-item">Separated link</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">

                <div class="text-left">
                    <div class="row">
                        <div class="col-md-3" style="padding-top:10px;">
                            <div class="row">
                                <label class="col-md-2 control-label">Từ</label>
                                <div class="col-md-10">
                                    <div class="input-group date form_datetime">
                                        <input class="string required bg-maxlength form-control"
                                               asp-for="qlXuatHoaDonViewModel.ThangNam"
                                              
                                               maxlength="50" size="50" type="date"
                                               id="endDate">
                                        <div class="form-control-focus"></div>



                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-9 md-radio-inline" style="padding-top:18px;">

                            <label class="bold" style="margin-right: 10px;">Trạng thái:</label>
                            <div class="md-radio">
                                <input onclick="jQueryAjaxChooseTTP('@Url.Action("Index1","XuatHoaDon",new {  thangNam = Model.qlXuatHoaDonViewModel.ThangNam, trangThai = 0}, Context.Request.Scheme)')"
                                       id="radio0" name="radio_TTHD" class="md-radiobtn radio-agreement-type" value="0" checked="" type="radio">
                                <label for="radio0">
                                    <span class=""></span>
                                    <span class="check"></span>
                                    <span class="box"></span>  Tất cả
                                </label>
                            </div>
                            <div class="md-radio">
                                <input onclick="jQueryAjaxChooseTTP('@Url.Action("Index1","XuatHoaDon",new { thangNam = Model.qlXuatHoaDonViewModel.ThangNam, trangThai = 1}, Context.Request.Scheme)')"
                                       id="radio1" name="radio_TTHD" class="md-radiobtn radio-agreement-type" value="1" type="radio">
                                <label for="radio1">
                                    <span class=""></span>
                                    <span class="check"></span>
                                    <span class="box"></span> Chưa thanh toán
                                </label>
                            </div>
                            <div class="md-radio">
                                <input onclick="jQueryAjaxChooseTTP('@Url.Action("Index1","XuatHoaDon",new { thangNam = Model.qlXuatHoaDonViewModel.ThangNam,  trangThai = 2}, Context.Request.Scheme)')"
                                       id="radio2" name="radio_TTHD" class="md-radiobtn radio-agreement-type" value="2" type="radio">
                                <label for="radio2">
                                    <span></span>
                                    <span class="check"></span>
                                    <span class="box"></span> Đã thanh toán
                                </label>
                            </div>

                        </div>
                    </div>


                </div>

                <div id="table_phong">
                    @await Html.PartialAsync("Table", Model)
                </div>

                <div class="row">
                    <div class="card-tools">
                        <ul class="pagination pagination-sm">
                            <li class="page-item"><a href="#" class="page-link">&laquo;</a></li>
                            <li class="page-item"><a href="#" class="page-link">1</a></li>
                            <li class="page-item"><a href="#" class="page-link">2</a></li>
                            <li class="page-item"><a href="#" class="page-link">3</a></li>
                            <li class="page-item"><a href="#" class="page-link">&raquo;</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.col -->
    </div>
</div>
<script>
    $("#datepicker").datepicker({
        format: "mm-yyyy",
        viewMode: "months",
        minViewMode: "months"
    });
</script>
