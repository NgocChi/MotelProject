@using Motel.ViewModels
@model QuanLyTaiKhoan
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, YourProjetcName



<!DOCTYPE html>
<html lang="en">
<head>
    <title>Đăng nhập</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/Login/ver01/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/Login/ver01/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Login/ver01/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Login/ver01/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Login/ver01/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/Login/ver01/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Login/ver01/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Login/ver01/css/main.css">
    <style>
        .limiter .container-login100 {
            background: linear-gradient(#2bbbad,#007c7e);
            padding-top: 20px;
        }

            .limiter .container-login100 .wrap-login100 {
                padding: 100px 60px 100px 80px;
                height: 550px;
                width: 850px;
            }
    </style>
</head>
<body>
    <div class="limiter">
        <div style="background-color: #007c7e;" class="container-login100">
            <span class="login100-form-title font-white sbold uppercase">QUẢN LÝ NHÀ TRỌ</span>
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Login/ver01/images/Motel.png" />
                </div>
                <form asp-controller="DangNhap" asp-action="Login" onsubmit="return jQueryAjaxLogin(this);" autocomplete="off" class="login100-form validate-form">
                    <div class="form-group form-md-line-input row">
                        <label class="col-md-2">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </label>
                        <div class="col-md-10" data-validate="Valid email is required: ex@abc.xyz">
                            <input class="string required bg-maxlength form-control"
                                   type="text" asp-for="taikhoan.TenTaiKhoan" name="TenTaiKhoan" placeholder="Tài khoản">
                            <div class="form-control-focus"></div>
                        </div>
                    </div>
                    <div class="form-group form-md-line-input row">
                        <label class="col-md-2">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </label>
                        <div class="col-md-10" data-validate="Lưu mật khẩu">
                            <input class="string required bg-maxlength form-control"
                                   type="password" asp-for="taikhoan.MatKhau" name="MatKhau" placeholder="Mật khẩu">
                            <div class="form-control-focus"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div style="padding-top:10px;" class="col-md-3">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="txt2" for="ckb1">
                                Nhớ
                            </label>
                        </div>
                        <div style="padding-top:10px;" class="col-md-9">
                            <span class="txt1">
                                Quên
                            </span>
                            <a class="txt2" href="#">
                                Tài khoản / Mật khẩu?
                            </a>
                        </div>
                    </div>
                    <div class="container-login100-form-btn">
                        <button style="border-radius:10px;" type="submit" class="login100-form-btn btnFormSubmit btn green">Đăng nhập</button>
                    </div>
                    <div class="text-center p-t-100">
                        <a class="txt2" onclick="ShowPopup('@Url.Action("CreateAccount", "DangNhap", Context.Request.Scheme)','Tạo tài khoản')">
                            Tạo tài khoản
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <div style="padding-top:100px;" id="chooseNhaTro" role="dialog" class="modal fade in" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header accent-green">
                    <div class="caption font-green">
                        <span class="caption-subject bold uppercase">
                            Chọn nhà trọ
                            <i class="fa fa-plus"></i>

                        </span>
                    </div>
                    <div class="actions">
                        <a class="btn btn-circle btn-icon-only btn-default show-main-modal" data-dismiss="modal" id="close">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="modal-body">


                </div>
            </div>

        </div>

    </div>

    <div id="myModal" role="dialog" class="modal fade in" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header accent-green">
                    <div class="caption font-green">
                        <span class="caption-subject bold uppercase">

                            <i class="fa fa-plus"></i>

                        </span>
                    </div>
                    <div class="actions">
                        <a class="btn btn-circle btn-icon-only btn-default show-main-modal" data-dismiss="modal" id="close">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="modal-body">


                </div>
            </div>

        </div>

    </div>

    <!--===============================================================================================-->
    <script src="~/Form/jsController/popper-min.js"></script>
    <script src="~/Form/jsController/jquery.js"></script>
    <script src="~/Form/jsController/popper-min.js"></script>
    <script src="~/Form/jsController/bootstrap-confirmation-min.js"></script>
    <script src="~/Form/plugins/layout/layout-min.js"></script>
    <script src="~/Form/plugins/bootstrap-confirmation-min.js"></script>
    <script src="~/Form/plugins/bootstrap-fileinput.js"></script>
    <script src="~/Form/plugins/bootstrap-hover-dropdown-min.js"></script>
    <script src="~/Form/plugins/js-cookie-min.js"></script>
    <script src="~/Form/plugins/tableHeadFixer.js"></script>
    <script src="~/Form/plugins/tinymce-min.js"></script>
    <script src="~/Form/plugins/toastr-min.js"></script>
    <script src="~/Form/plugins/ui-toastr-min.js"></script>
    <link href="~/Form/css/blog-min.css" rel="stylesheet" />
    <link href="~/Form/css/component-md-min.css" rel="stylesheet" />
    <link href="~/Form/css/custom-green.css" rel="stylesheet" />
    <link href="~/Form/css/layout-min.css" rel="stylesheet" />
    <link href="~/Form/css/plugins-md-min.css" rel="stylesheet" />
    <link href="~/Form/css/pricing-min.css" rel="stylesheet" />
    <link href="~/Form/css/search-min.css" rel="stylesheet" />
    <script src="~/Form/plugins/layout/bootstrap-min.js"></script>
    <script src="~/Login/ver01/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Login/ver01/js/main.js"></script>
    <script src="~/Form/jsController/notify-min.js"></script>

    <script src="~/Shared/plugins/jquery/jquery.min.js"></script>
    <script src="~/Shared/plugins/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/Shared/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Shared/plugins/chart.js/Chart.min.js"></script>
    <script src="~/Shared/plugins/sparklines/sparkline.js"></script>
    <script src="~/Shared/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/Shared/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
    <script src="~/Shared/plugins/jquery-knob/jquery.knob.min.js"></script>
    <script src="~/Shared/plugins/moment/moment.min.js"></script>
    <script src="~/Shared/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/Shared/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/Shared/plugins/summernote/summernote-bs4.min.js"></script>



    <script src="~/Shared/dist/js/adminlte.js"></script>
    <script src="~/Shared/dist/js/pages/dashboard.js"></script>
    <script src="~/Shared/dist/js/demo.js"></script>


    <script src="~/Form/jsController/notify-min.js"></script>
    <script src="~/Form/jsController/Controller/jsDangNhapController.js" asp-append-version="true"></script>
    <script src="~/Form/jsController/Controller/jsNhaTroController.js" asp-append-version="true"></script>




</body>
</html>