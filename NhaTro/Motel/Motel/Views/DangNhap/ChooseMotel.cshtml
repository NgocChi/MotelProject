
@{
    Layout = null;
}
@using Motel.ViewModels
@model QuanLyTaiKhoan
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, YourProjetcName

<form asp-controller="DangNhap" asp-action="Choose" method="post" class="simple_form form-horizontal" novalidate="novalidate"
      id="new_admin_building" accept-charset="UTF-8" data-remote="true">

    <div class="form-group form-md-line-input row">
        <label class="col-md-3 control-label">
            Chọn nhà trọ để quản lý
            <span class="required" aria-required="true"> * </span>
        </label>
        <div class="col-md-6">
            <select class="text required bg-maxlength form-control"
                    name="_chooseMotel" asp-for="_chooseMotel"
                    id="_MaNT" tabindex="-1" aria-hidden="true">
                @{
                    <option value="0">--Not selected--</option>
                    foreach (var item in Model.listNhaTro)
                    {
                        <option value="@item.MaNT">@item.Ten</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <button name="button"
                    onclick="ShowPopup('@Url.Action("AddOrEdit","DangNhap",new { id = 0}, Context.Request.Scheme)','Thêm mới')"
                    type="button" class="btn btn-default btnFormSubmit btn green">
                <i class="fa fa-plus" aria-hidden="true"></i>  Tạo nhà trọ
            </button>
        </div>

    </div>

    <div class="form-actions margin-top-10" style="padding-top:20px;">
        <div class="row">
            <div class="col-md-12 text-right">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i>Hủy bỏ
                </button>
                <button name="button" type="submit" class="btn btn-default btnFormSubmit btn green">
                    <i class="fa fa-floppy-o" aria-hidden="true"></i>  Lưu lại
                </button>
            </div>
        </div>
    </div>
</form>