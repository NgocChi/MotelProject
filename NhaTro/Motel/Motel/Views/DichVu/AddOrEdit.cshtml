
@{
    Layout = null;
}
@using Motel.ViewModels
@model DichVuViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, YourProjetcName



<form asp-controller="DichVu" asp-action="AddOrEdit" asp-route-id="@Model.dichVu.MaDV" onsubmit="return jQueryAjaxPost(this);"
      autocomplete="off" class="simple_form form-horizontal" novalidate="novalidate"
      id="new_admin_building" accept-charset="UTF-8" data-remote="true">
    <input name="utf8" type="hidden" value="✓">

    <ul class="errors"></ul>



    <div class="form-group form-md-line-input row">
        <label class="col-md-2 control-label">
            Nhà Trọ
            <span class="required" aria-required="true"> * </span>
        </label>
        <div class="col-md-6">
            <select asp-for="dichVu._MaNT"  class="text required bg-maxlength form-control"
                    id="_MaNT" tabindex="-1" aria-hidden="true">
                @{

                    foreach (var item in Model.listNhaTro)
                    {
                        <option value="@item.MaNT">@item.Ten</option>
                    }
                }
            </select>

            <div class="form-control-focus"></div>
        </div>
    </div>
    <div class="form-group form-md-line-input row">
        <label class="col-md-2 control-label">
            Chọn dịch vụ
            <span class="required" aria-required="true"> * </span>
        </label>

        <div class="checkbox-list col-md-10 ">
            <div class="row">
                @for (int i = 0; i < Model.listLoaiDichVu.Count(); i++)
                {
                    <div class="checkbox-inline col-md-1 text-right">
                        <input type="hidden" asp-for="@Model.listLoaiDichVu[i].MaLoaiDV" />
                        <input type="checkbox" asp-for="listLoaiDichVu[i].IsCheck" />
                    </div>
                    <div class="checkbox-inline col-md-2"> @Model.listLoaiDichVu[i].TenLoaiDV</div>

                }
            </div>

        </div>

    </div>

    <div class="form-actions margin-top-10">
        <div class="row">
            <div class="col-md-12 text-right">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i>Hủy bỏ
                </button>
                <button name="button" type="submit" class="btn btn-default btnFormSubmit btn green">
                    <i class="fa fa-floppy-o" aria-hidden="true"></i>  Lưu lại
                </button>
            </div>
        </div>
    </div>
</form>
