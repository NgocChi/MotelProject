                                    <tr>
                                        <th></th>
                                        <th class="text-center">
                                            <div class="md-checkbox-inline service-checkbox">
                                                <div class="icheck-primary d-inline ml-2">
                                                    <input type="checkbox" value="" name="todo1" id="todoCheck1">
                                                    <label for="todoCheck1"></label>
                                                </div>
                                            </div>
                                        </th>
                                        <th>Tên khu/Tòa nhà</th>
                                        <th>Địa chỉ</th>
                                        <th>Tổng số phòng</th>
                                        <th>Tổng số phòng trống</th>
                                        <th>Mô tả</th>
                                        <th></th>
                                    </tr>
                                </thead>


                                <tbody>
                                    @{

                                        foreach (var item in Model.listNhaTro)
                                        {
                                            <tr class="item-1932 highlight">
                                                <td class="text-center">
                                                    <a class="btn btn-circle btn-icon-only btn-default tooltips"
                                                        href="@Url.Action("Index","NhaTro",new { id = item.MaNT})"
                                                        data-remote="true"
                                                        id="btnEdit"
                                                        data-placement="top" data-original-title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @*data-target="#myModalEdit" data-toggle="modal"*@
                                                </td>
                                                <td class="text-center">
                                                    <div class="md-checkbox-inline service-checkbox">
                                                        <div class="icheck-primary d-inline ml-2">
                                                            <input type="checkbox" value="" name="todo2" id="ck-1932">
                                                            <label for="ck-1932">
                                                                <span></span><span class="check"></span><span class="box"></span>
                                                            </label>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>@item.Ten</td>
                                                <td>@item.DiaChi</td>
                                                <td>@item.TongPhong</td>
                                                <td>@item.PhongTrong</td>
                                                <td>@item.Mota</td>
                                                <td class="text-center">
                                                    <a data-btn-ok-class="btn-success"
                                                       data-btn-cancel-class="btn-danger"
                                                       data-toggle="confirmation"
                                                       data-placement="left" data-singleton="true"
                                                       data-tooltip-title="Xóa"
                                                       data-confirm-title="Bạn chắc chắn muốn xóa dữ liệu?"
                                                       class="btn red btn-circle btn-icon-only btn-default cus-tooltips cus-confirmations"
                                                       data-remote="true"  data-method="delete"> <i class="fas fa-trash"></i></a>
                                                </td>

                                            </tr>
                                        }
                                    }
                                </tbody>

                            </table>


                        </div>

                    </div>
                    <div class="row">
                        <div class="card-tools">
                            <ul class="pagination pagination-sm">
                                <li class="page-item"><a href="#" class="page-link">&laquo;</a></li>
                                <li class="page-item"><a href="#" class="page-link">1</a></li>
                                <li class="page-item"><a href="#" class="page-link">2</a></li>
                                <li class="page-item"><a href="#" class="page-link">3</a></li>
                                <li class="page-item"><a href="#" class="page-link">&raquo;</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.col -->
        </div>
    </div>
    <br />
    <div>
       
    </div>



    <div id="myModal" role="dialog" class="modal fade in" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header accent-green">
                    <div class="caption font-green">
                        <span class="caption-subject bold uppercase">

                            <i class="fa fa-plus"></i> Thêm mới

                        </span>
                    </div>
                    <div class="actions">
                        <a class="btn btn-circle btn-icon-only btn-default show-main-modal" data-dismiss="modal" id="close">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="modal-body">
                    <form asp-controller="NhaTro" asp-action="Create" method="post"
                          class="simple_form form-horizontal" novalidate="novalidate"
                          id="new_admin_building" accept-charset="UTF-8" data-remote="true">
                        <input name="utf8" type="hidden" value="✓">


                        <ul class="errors"></ul>
                        <div class="form-group form-md-line-input row">
                            <label class="col-md-2 control-label">
                                Tên khu nhà
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-4">
                                <input class="string required bg-maxlength form-control"
                                       placeholder="Nhập tên Khu/Tòa nhà" maxlength="50" size="50" type="text"
                                       asp-for="nhaTro.Ten" name="nhaTro.Ten"
                                       id="Ten">
                                <div class="form-control-focus"></div>
                            </div>

                        </div>

                        <div class="form-group form-md-line-input row">
                            <label class="col-md-2 control-label">
                                Địa chỉ
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-10">
                                <textarea class="text required bg-maxlength form-control"
                                          asp-for="nhaTro.DiaChi" name="nhaTro.DiaChi"
                                          placeholder="Nhập địa chỉ" maxlength="255" id="DiaChi"></textarea>
                                <div class="form-control-focus"></div>
                            </div>
                        </div>

                        <div class="form-group form-md-line-input row">
                            <label class="col-md-2 control-label">Tổng số phòng</label>
                            <div class="col-md-4">
                                <input class="string required bg-maxlength form-control"
                                       value="0" disabled placeholder="Tổng số phòng"
                                       asp-for="nhaTro.TongPhong" name="nhaTro.TongPhong"
                                       maxlength="50" size="50" type="number"
                                       id="TongPhong">

                                <div class="form-control-focus"></div>
                            </div>
                            <label class="col-md-2 control-label">Số phòng trống</label>
                            <div class="col-md-4">
                                <input class="string required bg-maxlength form-control"
                                       value="0" disabled placeholder="Số phòng trống" maxlength="50"
                                       asp-for="nhaTro.PhongTrong" name="nhaTro.PhongTrong"
                                       size="50" type="number" id="PhongTrong">

                                <div class="form-control-focus"></div>
                            </div>

                        </div>

                        <div class="form-group form-md-line-input row">

                            <label class="col-md-2 control-label">Mô tả</label>
                            <div class="col-md-10">
                                <textarea class="text optional bg-maxlength form-control autosizeme"
                                          asp-for="nhaTro.Mota" name="nhaTro.Mota"
                                          placeholder="Nhập mô tả" maxlength="500"
                                          id="Mota"></textarea>
                                <div class="form-control-focus"></div>
                            </div>
                        </div>



                        <div class="form-actions margin-top-10">
                            <div class="row">
                                <div class="col-md-12 text-right">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">
                                        <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i>Hủy bỏ
                                    </button>
                                    <button name="button" type="submit" class="btn btn-default btnFormSubmit btn green">
                                        <i class="fa fa-floppy-o" aria-hidden="true"></i>  Lưu lại
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </div>

    </div>

    <div id="myModalEdit" role="dialog" class="modal fade in" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header accent-green">
