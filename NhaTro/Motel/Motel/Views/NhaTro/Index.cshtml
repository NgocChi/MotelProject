            <div class="modal-body">
                <form class="simple_form form-horizontal" novalidate="novalidate" id="new_admin_building" action="/admin/buildings" accept-charset="UTF-8" data-remote="true" method="post">
                    <input name="utf8" type="hidden" value="✓">


                    <ul class="errors"></ul>
                    <div class="form-group form-md-line-input row">
                        <label class="col-md-2 control-label">
                            Tên khu nhà
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-4">
                            <input class="string required bg-maxlength form-control"
                                   placeholder="Nhập tên Khu/Tòa nhà" maxlength="50" size="50" type="text"
                                   id="admin_building_name">
                            <div class="form-control-focus"></div>
                        </div>

                    </div>

                    <div class="form-group form-md-line-input row">
                        <label class="col-md-2 control-label">
                            Địa chỉ
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-10">
                            <textarea class="text required bg-maxlength form-control"
                                      placeholder="Nhập địa chỉ" maxlength="255" name="admin_building[address]" id="admin_building_address"></textarea>
                            <div class="form-control-focus"></div>
                        </div>
                    </div>

                    <div class="form-group form-md-line-input row">
                        <label class="col-md-2 control-label">Tổng số phòng</label>
                        <div class="col-md-4">
