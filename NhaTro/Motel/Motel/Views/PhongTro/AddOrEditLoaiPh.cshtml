
@{
    Layout = null;
}
@using Motel.ViewModels
@model QuanLyPhongViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, YourProjetcName

<form class="simple_form form-horizontal" asp-controller="PhongTro" asp-action="AddOrEditLoaiPh" asp-route-id="@Model.loaiPhong.MaLP" onsubmit="return jQueryAjaxPost(this);" novalidate="novalidate"
      id="new_admin_building" accept-charset="UTF-8" data-remote="true">
    <input name="utf8" type="hidden" value="✓">

    <ul class="errors"></ul>
    <div class="form-group form-md-line-input row">
        <label class="col-md-2 control-label">
            Tên loại phòng
            <span class="required" aria-required="true"> * </span>
        </label>
        <div class="col-md-4">
            <input asp-for="loaiPhong.Ten" class="string required bg-maxlength form-control"
                   placeholder="Tên loại phòng" maxlength="50" size="50" type="text" name="loaiPhong.Ten" id="Ten">
            <div class="form-control-focus"></div>
        </div>
        <label class="col-md-2 control-label">
            Gía phòng
            <span class="required" aria-required="true"> * </span>
        </label>
        <div class="col-md-4">
            <input asp-for="loaiPhong.Gia" class="string required bg-maxlength form-control"
                   placeholder="Gía phòng" maxlength="50" size="50" type="number" name="loaiPhong.Gia" id="Gia">
            <div class="form-control-focus"></div>
        </div>
    </div>
    <div class="form-group form-md-line-input row">
        <label class="col-md-2 control-label">
            Gía đặt cọc
            <span class="required" aria-required="true"> * </span>
        </label>
        <div class="col-md-4">
            <input asp-for="loaiPhong.GiaDatCoc" class="string required bg-maxlength form-control"
                   placeholder="Gía đặt cọc" maxlength="50" size="50" type="number" name="loaiPhong.GiaDatCoc" id="GiaDatCoc">
            <div class="form-control-focus"></div>
        </div>
        <label class="col-md-2 control-label">
            Diện tích
            <span class="required" aria-required="true"> * </span>
        </label>
        <div class="col-md-4">
            <input class="string required bg-maxlength form-control"
                   placeholder="Diện tích" maxlength="50" size="50" type="number"
                   asp-for="loaiPhong.DienTich" name="loaiPhong.DienTich" id="DienTich">

            <div class="form-control-focus"></div>
        </div>
    </div>

    <div class="form-group form-md-line-input row">
        <label class="col-md-2 control-label">Thông tin</label>
        <div class="col-md-8">
            <textarea class="text optional bg-maxlength form-control autosizeme"
                      asp-for="loaiPhong.ThongTin" name="loaiPhong.ThongTin"
                      placeholder="Nhập mô tả" maxlength="500"
                      id="ThongTin"></textarea>
        </div>


    </div>

    <div class="form-actions margin-top-10">
        <div class="row">
            <div class="col-md-12 text-right">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i>Hủy bỏ
                </button>
                <button name="button" type="submit" class="btn btn-default btnFormSubmit btn green">
                    <i class="fa fa-floppy-o" aria-hidden="true"></i>  Lưu lại
                </button>
            </div>
        </div>
    </div>
</form>