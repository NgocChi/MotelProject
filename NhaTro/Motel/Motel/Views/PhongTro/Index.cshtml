                            <div class="form-control-focus"></div>
                        </div>
                        <label class="col-md-2 control-label">
                            Gía phòng
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-4">
                            <input asp-for="@Model.loaiPhong.Gia" class="string required bg-maxlength form-control"
                                   placeholder="Gía phòng" maxlength="50" size="50" type="number" name="Gia" id="Gia">
                            <div class="form-control-focus"></div>
                        </div>
                    </div>
                    <div class="form-group form-md-line-input row">
                        <label class="col-md-2 control-label">
                            Gía đặt cọc
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-4">
                            <input asp-for="@Model.loaiPhong.GiaDatCoc" class="string required bg-maxlength form-control"
                                   placeholder="Gía đặt cọc" maxlength="50" size="50" type="number" name="GiaDatCoc" id="GiaDatCoc">
                            <div class="form-control-focus"></div>
                        </div>
                        <label class="col-md-2 control-label">
                            Diện tích
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-4">
                            <input class="string required bg-maxlength form-control" 
                                   placeholder="Diện tích" maxlength="50" size="50" type="number" 
                                   name="DienTich" asp-for="@Model.loaiPhong.DienTich" id="DienTich">

                            <div class="form-control-focus"></div>
                        </div>
                    </div>

                    <div class="form-group form-md-line-input row">
                        <label class="col-md-2 control-label">Thông tin</label>
                        <div class="col-md-8">
                            <textarea class="text optional bg-maxlength form-control autosizeme"
                                      asp-for="@Model.loaiPhong.ThongTin" name="ThongTin"
                                      placeholder="Nhập mô tả" maxlength="500"
                                      id="ThongTin"></textarea>
                        </div>
                        

                    </div>

                    <div class="form-actions margin-top-10">
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button type="button" class="btn btn-default" data-dismiss="modal">
                                    <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i>Hủy bỏ
                                </button>
                                <button name="button" type="submit" class="btn btn-default btnFormSubmit btn green">
                                    <i class="fa fa-floppy-o" aria-hidden="true"></i>  Lưu lại
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>



