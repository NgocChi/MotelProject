    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_layout.cshtml";
}
@using Motel.ViewModels
@model QuanLyPhongViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
