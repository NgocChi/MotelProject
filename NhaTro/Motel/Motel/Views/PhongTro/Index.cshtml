                        </button>
                        <div class="btn-group">
                            <button type="button" class="btn btn-tool dropdown-toggle" data-toggle="dropdown">
                                <i class="fas fa-wrench"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" role="menu">
                                <a href="#" class="dropdown-item">Action</a>
                                <a href="#" class="dropdown-item">Another action</a>
                                <a href="#" class="dropdown-item">Something else here</a>
                                <a class="dropdown-divider"></a>
                                <a href="#" class="dropdown-item">Separated link</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- /.card-header -->
            <div class="card-body">
                <div class="text-right">
                    <button class="btn green btn-outline btn-circle btn-sm tooltips" data-target="#myModal" data-toggle="modal" data-original-title="Thêm mới" data-placement="top" data-remote="true"><i class="fa fa-plus"></i>Thêm mới</button>
                    <a class="btn green btn-outline btn-circle btn-sm tooltips" data-original-title="Thêm nhiều" data-placement="top" data-remote="true" href="#"><i class="fa fa-plus-square"></i>Thêm nhiều</a>
