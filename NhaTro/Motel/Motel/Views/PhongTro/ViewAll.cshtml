
@{
    Layout = null;
}

@using Motel.ViewModels
@model CommonViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, YourProjetcName

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <span class="caption-subject font-green sbold uppercase">Danh sách phòng trọ</span>
                <div class="text-right">
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <div class="btn-group">
                            <button type="button" class="btn btn-tool dropdown-toggle" data-toggle="dropdown">
                                <i class="fas fa-wrench"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" role="menu">
                                <a href="#" class="dropdown-item">Action</a>
                                <a href="#" class="dropdown-item">Another action</a>
                                <a href="#" class="dropdown-item">Something else here</a>
                                <a class="dropdown-divider"></a>
                                <a href="#" class="dropdown-item">Separated link</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- /.card-header -->
            <div class="card-body">
                <div class="text-right">
                    <button onclick="ShowPopup('@Url.Action("AddOrEdit","PhongTro",new { id = 0}, Context.Request.Scheme)','Thêm mới')" class="btn green btn-outline btn-circle btn-sm tooltips" data-placement="top"><i class="fa fa-plus"></i>Thêm mới</button>
                    <button onclick="ShowPopup('@Url.Action("AddList","PhongTro", Context.Request.Scheme)','Thêm nhiều')" class="btn green btn-outline btn-circle btn-sm tooltips" data-original-title="Thêm nhiều" data-placement="top" data-remote="true" href="#"><i class="fa fa-plus-square"></i>Thêm nhiều</button>


                    <a class="btn green btn-outline btn-circle btn-sm tooltips" data-original-title="Tìm kiếm" data-placement="top" data-remote="true" href="#"><i class="fa fa-search"></i>Tìm kiếm</a>
                    <button data-toggle="confirmation" data-placement="left" type="submit" form="myForm"
                            class="btn green btn-outline btn-circle btn-sm"
                            data-template="<div class=&quot;popover confirmation&quot;><div class=&quot;arrow&quot;></div><h3 class=&quot;popover-title&quot;></h3><div class=&quot;popover-content text-center&quot;><div class=&quot;btn-group&quot;><a class=&quot;btn&quot; data-apply=&quot;confirmation&quot;></a><a class=&quot;btn&quot; data-dismiss=&quot;confirmation&quot;></a></div></div></div>"
                            data-original-title="" title="">
                        <i class="fa fa-trash font-red"></i>Xóa nhiều
                    </button>

                </div>
                <div class="text-left">
                    <div class="md-radio-inline">
                        <label class="bold" style="margin-right: 10px;">Trạng thái phòng:</label>
                        <div class="md-radio">
                            <input onclick="jQueryAjaxChooseTTP('@Url.Action("Index1","PhongTro",new { trangThai = 0}, Context.Request.Scheme)')"
                                   id="radio0" name="radio_TTP" class="md-radiobtn radio-agreement-type" value="0" checked="" type="radio">
                            <label for="radio0">
                                <span class=""></span>
                                <span class="check"></span>
                                <span class="box"></span>  Tất cả
                            </label>
                        </div>
                        <div class="md-radio">
                            <input onclick="jQueryAjaxChooseTTP('@Url.Action("Index1","PhongTro",new { trangThai = 1}, Context.Request.Scheme)')"
                                   id="radio1" name="radio_TTP" class="md-radiobtn radio-agreement-type" value="1" type="radio">
                            <label for="radio1">
                                <span class=""></span>
                                <span class="check"></span>
                                <span class="box"></span> Chưa thuê
                            </label>
                        </div>
                        <div class="md-radio">
                            <input onclick="jQueryAjaxChooseTTP('@Url.Action("Index1","PhongTro",new { trangThai = 2}, Context.Request.Scheme)')"
                                   id="radio2" name="radio_TTP" class="md-radiobtn radio-agreement-type" value="2" type="radio">
                            <label for="radio2">
                                <span></span>
                                <span class="check"></span>
                                <span class="box"></span> Đang cọc phòng
                            </label>
                        </div>
                        <div class="md-radio">
                            <input onclick="jQueryAjaxChooseTTP('@Url.Action("Index1","PhongTro",new { trangThai = 3}, Context.Request.Scheme)')"
                                   id="radio3" name="radio_TTP" class="md-radiobtn radio-agreement-type" value="3" type="radio">
                            <label for="radio3">
                                <span></span>
                                <span class="check"></span>
                                <span class="box"></span> Đã được thuê
                            </label>
                        </div>
                    </div>

                </div>
                <div id="table_phong">
                    @await Html.PartialAsync("Table", Model)
                </div>

            </div>
        </div>
        <!-- /.col -->
    </div>
</div>


