
@{
    Layout = null;
}

@using Motel.ViewModels
@model QuanLyPhongViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, YourProjetcName

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <span class="caption-subject font-green sbold uppercase">Danh sách phòng trọ</span>
                <div class="text-right">
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <div class="btn-group">
                            <button type="button" class="btn btn-tool dropdown-toggle" data-toggle="dropdown">
                                <i class="fas fa-wrench"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" role="menu">
                                <a href="#" class="dropdown-item">Action</a>
                                <a href="#" class="dropdown-item">Another action</a>
                                <a href="#" class="dropdown-item">Something else here</a>
                                <a class="dropdown-divider"></a>
                                <a href="#" class="dropdown-item">Separated link</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- /.card-header -->
            <div class="card-body">
                <div class="text-right">
                    <button onclick="ShowPopup('@Url.Action("AddOrEdit","PhongTro",new { id = 0}, Context.Request.Scheme)','Thêm mới')" class="btn green btn-outline btn-circle btn-sm tooltips" data-placement="top"><i class="fa fa-plus"></i>Thêm mới</button>
                    <a class="btn green btn-outline btn-circle btn-sm tooltips" data-original-title="Thêm nhiều" data-placement="top" data-remote="true" href="#"><i class="fa fa-plus-square"></i>Thêm nhiều</a>
                    <a class="btn green btn-outline btn-circle btn-sm tooltips" data-original-title="Nhập excel" data-placement="top" data-remote="true" href="#"><i class="fa fa-upload"></i>Nhập excel</a>

                    <a class="btn green btn-outline btn-circle btn-sm tooltips" data-original-title="Tìm kiếm" data-placement="top" data-remote="true" href="#"><i class="fa fa-search"></i>Tìm kiếm</a>
                    <button data-toggle="confirmation" data-placement="left" type="submit" form="myForm"
                            class="btn green btn-outline btn-circle btn-sm"
                            data-template="<div class=&quot;popover confirmation&quot;><div class=&quot;arrow&quot;></div><h3 class=&quot;popover-title&quot;></h3><div class=&quot;popover-content text-center&quot;><div class=&quot;btn-group&quot;><a class=&quot;btn&quot; data-apply=&quot;confirmation&quot;></a><a class=&quot;btn&quot; data-dismiss=&quot;confirmation&quot;></a></div></div></div>"
                            data-original-title="" title="">
                        <i class="fa fa-trash font-red"></i>Xóa nhiều
                    </button>

                </div>

                <div class="row">
                    <div class="card-body">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th class="text-center">
                                        <div class="md-checkbox-inline service-checkbox">
                                            <div class="icheck-primary d-inline ml-2">
                                                <input type="checkbox" value="" name="todo1" id="todoCheck1">
                                                <label for="todoCheck1"></label>
                                            </div>
                                        </div>
                                    </th>
                                    <th>Tên khu nhà</th>
                                    <th>Tầng</th>
                                    <th>Tên phòng</th>
                                    <th>Số người tối đa</th>
                                    <th>Diện tích</th>
                                    <th>Đơn giá</th>
                                    <th>Gía cọc</th>
                                    <th>Trạng thái</th>
                                    <th></th>

                                </tr>
                            </thead>

                            <tbody>
                                @{

                                    foreach (var item in Model.listPhong)
                                    {
                                        <tr class="item-1932 highlight">
                                            <td class="text-center">

                                                <a class="btn btn-circle btn-icon-only btn-default tooltips"
                                                   onclick="ShowPopup('@Url.Action("AddOrEdit","PhongTro",new { id = item.MaPH }, Context.Request.Scheme)','Chỉnh sửa')"
                                                   data-placement="top" data-original-title="Chỉnh sửa"><i class="fas fa-edit"></i></a>

                                            </td>
                                            <td class="text-center">
                                                <div class="md-checkbox-inline service-checkbox">
                                                    <div class="icheck-primary d-inline ml-2">
                                                        <input type="checkbox" value="" name="todo2" id="ck-1932">
                                                        <label for="ck-1932">
                                                            <span></span><span class="check"></span><span class="box"></span>
                                                        </label>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@item.TenNhaTro</td>
                                            <td>@item.Tang</td>
                                            <td>@item.Ten</td>
                                            <td>@item.SoNguoiToiDa</td>
                                            <td>@item.DienTich m2</td>
                                            <td>@item.Gia</td>
                                            <td>@item.GiaDatCoc</td>
                                            <td class="stop-service text-center 34079">
                                                @item.TrangThai
                                            </td>
                                            <td class="text-center">
                                                <form asp-action="Delete"
                                                      asp-route-id="@item.MaPH"
                                                      onsubmit="return jQueryAjaxDelete(this)">
                                                    <button type="submit"
                                                            class="btn red btn-circle btn-icon-only btn-default">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.col -->
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <span class="caption-subject font-green sbold uppercase">Loại phòng</span>
                <div class="text-right">
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <div class="btn-group">
                            <button type="button" class="btn btn-tool dropdown-toggle" data-toggle="dropdown">
                                <i class="fas fa-wrench"></i>
                            </button>

                        </div>
                    </div>

                </div>
            </div>

            <!-- /.card-header -->
            <div class="card-body">
                <div class="text-right">
                    <button class="btn green btn-outline btn-circle btn-sm tooltips"
                            onclick="ShowPopup('@Url.Action("AddOrEditLoaiPh","PhongTro",new { id = 0 }, Context.Request.Scheme)','Thêm mới')"
                            data-placement="top">
                        <i class="fa fa-plus"></i>Thêm mới
                    </button>
                    <a class="btn green btn-outline btn-circle btn-sm tooltips" data-original-title="Tìm kiếm" data-placement="top" data-remote="true" href="#"><i class="fa fa-search"></i>Tìm kiếm</a>
                </div>

                <div class="row">
                    <div class="card-body">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th class="text-center">
                                        <div class="md-checkbox-inline service-checkbox">
                                            <div class="icheck-primary d-inline ml-2">
                                                <input type="checkbox" value="" name="todo1" id="todoCheck1">
                                                <label for="todoCheck1"></label>
                                            </div>
                                        </div>
                                    </th>
                                    <th>Tên Loại</th>
                                    <th>Gía</th>
                                    <th>Gía cọc mặc định</th>
                                    <th>Thông tin</th>
                                    <th>Diện tích</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{

                                    foreach (var item in Model.listLoaiPhong)
                                    {
                                        <tr class="item-1932 highlight">
                                            <td class="text-center">
                                                <a class="btn btn-circle btn-icon-only btn-default tooltips"
                                                   onclick="ShowPopup('@Url.Action("AddOrEditLoaiPh","PhongTro",new { id = item.MaLP}, Context.Request.Scheme)','Chỉnh sửa')"
                                                   data-placement="top" data-original-title="Chỉnh sửa"><i class="fas fa-edit"></i></a>

                                            </td>
                                            <td class="text-center">
                                                <div class="md-checkbox-inline service-checkbox">
                                                    <div class="icheck-primary d-inline ml-2">
                                                        <input type="checkbox" value="" name="todo2" id="ck-1932">
                                                        <label for="ck-1932">
                                                            <span></span><span class="check"></span><span class="box"></span>
                                                        </label>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@item.Ten</td>
                                            <td>@item.Gia</td>
                                            <td>@item.GiaDatCoc</td>
                                            <td>@item.ThongTin</td>
                                            <td>@item.DienTich m2</td>

                                            <td class="text-center">

                                                <form asp-action="DeleteLoaiPh"
                                                      asp-route-id="@item.MaLP"
                                                      onsubmit="return jQueryAjaxDelete(this)">
                                                    <button type="submit"
                                                            class="btn red btn-circle btn-icon-only btn-default">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.col -->
    </div>
</div>
