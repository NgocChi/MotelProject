
@{
    Layout = null;
}
@using Motel.ViewModels
@model QuanLyHopDongViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, YourProjetcName


<div class="row">
    <div class="col-md-6">
        <div class="table-scrollable table-scrollable-agreement">

            <!-- Chọn người đại diện, Số tien dat coc -->
            <div class="form-group form-md-line-input row">
                <label class="col-md-4 control-label">
                    Người đại diện
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-8">
                    <select class="form-control select optional form-control" name="admin_agreement[renter_id]" id="admin_agreement_renter_id">
                        <option value="">-- Chọn người đại diện --</option>
                        <option selected="selected" value="8844">Tâm</option>
                    </select>
                </div>
            </div>

            <div class="form-group form-md-line-input row">
                <label class="col-md-4 control-label">Tiền đặt cọc</label>
                <div class="col-md-8">
                    <input class="string optional bg-maxlength optional form-control number-format-clear-empty" placeholder="Nhập số tiền đặt cọc" maxlength="11" size="11" type="text" value="3000000" name="admin_agreement[down_payment]" id="admin_agreement_down_payment">
                    <div class="form-control-focus"></div>
                </div>
            </div>

            <div class="form-group form-md-line-input row">
                <label class="col-md-4 control-label">Ngày bắt đầu</label>
                <div class="col-md-8">
                    <div class="input-group date form_datetime">
                        <input type="text" id="startDate" class="form-control" name="admin_agreement[start_date]" value="18/06/2020 20:49" readonly="">
                        <div class="form-control-focus"></div>
                        <span class="input-group-btn">
                            <button class="btn default date-set" type="button">
                                <i class="fa fa-calendar"></i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>

            <div class="form-group form-md-line-input row">
                <label class="col-md-4 control-label">Ngày hết hạn<span class="required" aria-required="true"> * </span></label>
                <div class="col-md-8">
                    <div class="input-group date form_datetime">
                        <input type="text" id="endDate" class="form-control" name="admin_agreement[end_date]" value="18/06/2021 20:49" readonly="">
                        <div class="form-control-focus"></div>
                        <span class="input-group-btn">
                            <button class="btn default date-set" type="button">
                                <i class="fa fa-calendar"></i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Chu ky thanh toan -->
            <div class="form-group form-md-line-input row">
                <label class="col-md-4 control-label">
                    Kì thanh toán
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-8">
                    <div class="input-group">
                        <input class="string optional form-control bg-maxlength number-format" value="1" placeholder="Nhập kì thanh toán" maxlength="2" size="2" type="text" name="admin_agreement[billing_cycle]" id="admin_agreement_billing_cycle">
                        <div class="form-control-focus"></div>
                        <span class="input-group-btn">
                            <button class="btn default" type="button">
                                <i class="fa fa-history"></i>tháng/lần
                            </button>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Ngày cảnh báo nộp tiền theo kỳ -->
            <div class="form-group form-md-line-input row">
                <label class="col-md-4 control-label">
                    Ngày đóng tiền kỳ tới
                    <span class="required" aria-required="true"> * </span> <span class="required tooltips" aria-required="true" data-placement="top" data-original-title="Ngày dùng để cảnh báo khi đến kỳ thanh toán"> [?] </span>
                </label>
                <div class="col-md-8">
                    <div class="input-group">
                        <input class="string optional form-control bg-maxlength number-format" value="18" placeholder="Nhập kì thanh toán" maxlength="2" size="2" type="text" name="admin_agreement[billing_cycle_warning]" id="admin_agreement_billing_cycle_warning">
                        <div class="form-control-focus"></div>
                        <span class="input-group-btn">
                            <button class="btn default" type="button">
                                <i class="fa fa-history"></i>Kỳ
                            </button>
                        </span>
                    </div>
                </div>
            </div>


            @*<div class="col-lg-6">
                     Ghi chú
                    <div class="form-group form-md-line-input">
                        <div class="row">
                            <label class="col-md-4 control-label">Ghi chú (Nếu có) </label>
                            <div class="col-md-8">
                                <textarea class="text optional form-control bg-maxlength" row="5" style="height: 286px;" maxlength="255" name="admin_agreement[description]" id="admin_agreement_description"></textarea>
                                <div class="form-control-focus"></div>
                            </div>
                        </div>
                    </div>
                </div>*@
        </div>
    </div>

    <div class="col-md-6" style="padding-left: 0px;">
        <div class="table-scrollable table-scrollable-agreement">
            <table class="table table-striped table-bordered table-hover items-table" id="right-table">
                <thead>
                    <tr>
                        <th class="text-center">
                            <a class="btn btn-circle btn-icon-only btn-default remove-all-selection-service"><span class="fa fa-minus" aria-hidden="true"></span></a>
                        </th>
                        <th>Tên khách thuê</th>
                        <th class="text-center">SĐT </th>

                    </tr>
                </thead>
                <tbody class="renter-right-container">
                    @{
                        foreach (var item in Model.listKhachHang)
                        {
                            <tr class="renter-item-8844">
                                <td class="text-center">
                                    <a class="btn btn-circle btn-icon-only btn-default item-selection remove-selection"><input class="display-hide" type="checkbox" checked="checked"><span class="fa fa-minus" aria-hidden="true"></span></a>
                                </td>
                                <td class="renter-item-name-8844">@item.TenKH</td>
                                <td class="renter-item-phone-8844 text-center">@item.SoDienThoai</td>

                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

